<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme.Base" parent="Base.V21.Theme.AppCompat.Light" />-->

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="NewAppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/myPreferenceScreen</item>
    </style>


    <style name="NewAppTheme.NoActionBar" parent="NewAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="myPreferenceScreen" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarFadeDuration">1</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">-->
    <!--<item name="android:windowActionBar">false</item>-->
    <!--<item name="android:windowNoTitle">true</item>-->
    <!--</style>-->

    <!--<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

</resources>
