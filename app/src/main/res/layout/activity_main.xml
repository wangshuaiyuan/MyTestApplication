<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="测试按钮"/>

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/id_view_pager"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:visibility="visible" />

    <com.example.navtablayout.core.NavTabLayout
        android:id="@+id/nav_tab_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_test_main_ac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <wsy.org.mytestapplication.view.ScrollTestView
        android:id="@+id/scroll_test_main_ac"
        android:layout_width="match_parent"
        android:paddingTop="500dp"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_scroll_test_main_ac"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#26a69a"
            android:text="test"
            android:textColor="#ffffff" />

    </wsy.org.mytestapplication.view.ScrollTestView>
</LinearLayout>