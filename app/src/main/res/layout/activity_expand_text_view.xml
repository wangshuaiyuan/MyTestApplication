                    android:layout_height="wrap_content"
                    android:text="个性描述个性描述个性描述个性描述个性描述个性描述个性描述个性描述个性描述个性描述个性描述个性描述个"
                    android:textColor="#323232"
                    android:textSize="13sp" />
                <!--小标题1-->
                <TextView
                    android:id="@+id/tv_lodge_detail_desc_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="内部情况"
                    android:textColor="#878787"
                    android:textSize="13sp" />
                <!--描述2-->
                <TextView
                    android:id="@+id/tv_lodge_detail_desc_content2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个性描述个性描述个性描述个性描述个性描述个性描述个性描述个性描述个性描述个性描述个性描述个性描述个"
                    android:textColor="#323232"
                    android:textSize="13sp" />

            </LinearLayout>

            <!--房源描述，状态-->
            <TextView
                android:id="@+id/tv_lodge_detail_desc_collapsed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="个性描述个性描述个性描述个性描述个性描述个性描述个性描述个性描述个性描述个性描述个性描述个性描述个"
                android:textColor="#323232"
                android:textSize="13sp" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_lodge_detail_desc_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:src="@mipmap/detail_expand_arrow"
            android:visibility="visible" />

    </wsy.org.mytestapplication.view.ExpandableTextView>
    <Button
        android:id="@+id/expand_test_btn"
        android:layout_width="wrap_content"
